<div class="page-header">
    <h1>Edit account</h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal', :method => :put }) do |f| %>

    <div class="row">
        <div class="span6">
            <fieldset>
            <legend>Basic details</legend>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.input :email %>
            </fieldset>
        </div>
        <div class="span5 offset1">
            <h3>Cancel account</h3>

            <p>
                Unhappy? 
                <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.
            </p>
        </div>
    </div>

    <div class="row">
        <div class="span6">
            <fieldset>
                <legend>Profile</legend>
                <%= f.input :profile_name %>
            </fieldset>
        </div>
    </div>

    <div class="row">
        <div class="span6">
            <fieldset>
                <legend>Change password</legend>
                <p class="muted">Leave this section blank if you do not want to change your password.</p>
                <%= f.input :password %>
                <%= f.input :password_confirmation %>
                <%= f.input :current_password %>
            </fieldset>
        </div>
    </div>

    <div class="controls">
        <%= f.button :submit, "Update account", class: 'btn-primary' %> &nbsp;
        <%= link_to "Cancel", :back, class: 'btn' %>
    </div>
    
<% end %>