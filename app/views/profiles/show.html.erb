<div class="row">
	<div class="span2">
		<%= image_tag @user.gravatar_url, class: 'img-circle' %>
	</div>
	<div class="span10 page-header">
		<h1><%= @user.full_name %></h1>
		<% if @statuses %>
			<p class="lead"><%= @statuses.last.content %></p>
		<% end %>
	</div>
</div>

<% if @statuses %>
	<% @statuses.each do |status| %>
		<div class="row">
			<div class="span10 offset2 status">
				<p class="lead"><%= status.content %></p>
				<p class="muted"><%= time_ago_in_words(status.created_at) %> ago</p>
			</div>
		</div>
	<% end %>
<% end %>