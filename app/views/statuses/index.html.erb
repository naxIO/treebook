<div class="page-header">
	<h1>All statuses</h1>
</div>

<div class="row create">
	<div class="span12">
		<%= link_to "Create new status", new_status_path, class: 'btn btn-primary' %>
	</div>
</div>

<% @statuses.each do |status| %>
<div class="status">
	<div class="row">
		<div class="span1">
			<a href="/<%= status.user.profile_name %>">
				<%= image_tag status.user.gravatar_url, class: 'img-circle' %>
			</a>
		</div>
		<div class="span7">
			<a href="/<%= status.user.profile_name %>"><strong><%= status.user.full_name %></strong></a>
			<blockquote><p><%= status.content %></p></blockquote>
			<div class="meta">
				<small>
					<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
					<span class="admin">
						 | <%= link_to "Edit", edit_status_path(status) %> | 
						<%= link_to "Delete", status, method: :delete, data: { confirm: 'Are you sure you want to delete this status?'} %>
					</span>
				</small>
			</div>
		</div>
	</div>
</div>
<% end %>